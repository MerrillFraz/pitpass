// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // Generate into the hidden .prisma folder instead of the public @prisma folder
  output   = "../../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

model Trip {
  id        String    @id @default(cuid())
  name      String
  date      DateTime
  location  String
  expenses  Expense[]
  notes     Note[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Expense {
  id        String      @id @default(cuid())
  trip      Trip        @relation(fields: [tripId], references: [id])
  tripId    String
  type      ExpenseType
  amount    Float
  date      DateTime
  receipt   Receipt?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Note {
  id        String   @id @default(cuid())
  trip      Trip     @relation(fields: [tripId], references: [id])
  tripId    String
  content   String
  date      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Receipt {
  id        String   @id @default(cuid())
  expense   Expense  @relation(fields: [expenseId], references: [id])
  expenseId String   @unique
  fileName  String
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ExpenseType {
  DIESEL
  TOLLS
  PIT_PASSES
  RACE_GAS
  REPAIRS
  FOOD_BEVERAGE
  OTHER
}
